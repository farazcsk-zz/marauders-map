{
  "name": "pubnub-react",
  "version": "0.1.0",
  "description": "A boiler-plate setup for React PubNub chat application",
  "license": "MIT",
  "engines": {
    "node": "4.x"
  },
  "scripts": {
    "prebuild": "npm run clean",
    "build": "cross-env NODE_ENV=production webpack -p",
    "clean": "rimraf dist/",
    "dev": "cross-env NODE_ENV=development webpack-dev-server -d --inline --hot --progress --no-info",
    "lint": "npm run lint-js",
    "lint-js": "eslint '**/*.js' --ignore-path .gitignore",
    "postinstall": "npm run build",
    "start": "cross-env NODE_ENV=production node server/node-server.js",
    "pretest": "npm run clean coverage/ & npm run lint",
    "test": "nyc --reporter=lcov --reporter=text-summary mocha",
    "posttest": "nyc check-coverage",
    "test:watch": "mocha --watch"
  },
  "nyc": {
    "exclude": [
      "**/*.test.js",
      "test/entry.js"
    ],
    "lines": 80,
    "statements": 80,
    "branches": 80,
    "functions": 80
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.8.0",
    "babel-core": "^6.4.0",
    "babel-eslint": "^6.0.2",
    "babel-loader": "^6.2.1",
    "babel-plugin-__coverage__": "^0.111111.11",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "babel-register": "^6.7.2",
    "chai": "^3.4.0",
    "classnames": "^2.2.3",
    "cross-env": "^1.0.7",
    "enzyme": "^2.2.0",
    "es5-shim": "^4.5.6",
    "es6-promise": "^3.1.2",
    "es6-shim": "^0.35.0",
    "eslint": "2.9.0",
    "eslint-loader": "^1.1.1",
    "eslint-plugin-react": "^5.0.0",
    "file-loader": "^0.8.4",
    "history": "^2.0.1",
    "html-webpack-plugin": "^2.9.0",
    "immutable": "^3.7.5",
    "json-loader": "^0.5.3",
    "mocha": "^2.3.3",
    "nyc": "^6.4.3",
    "raw-loader": "^0.5.1",
    "react": "^15.0.1",
    "react-addons-test-utils": "^15.0.1",
    "react-dom": "^15.0.1",
    "react-hot-loader": "^1.3.0",
    "react-redux": "^4.4.2",
    "react-router": "^2.0.0-rc5",
    "react-router-redux": "^4.0.0",
    "redux": "^3.3.1",
    "redux-form": "^5.2.3",
    "redux-logger": "^2.1.4",
    "redux-thunk": "^2.0.1",
    "require-hacker": "^2.1.2",
    "rimraf": "^2.4.3",
    "sinon": "^1.17.3",
    "source-map-loader": "^0.1.5",
    "style-loader": "^0.13.0",
    "url-loader": "^0.5.6",
    "webpack": "^1.12.2",
    "webpack-dev-server": "^1.14.1",
    "webpack-hot-middleware": "^2.6.4",
    "webpack-split-by-path": "0.0.8"
  },
  "dependencies": {
    "express": "^4.13.3",
    "helmet": "^2.0.0",
    "http-proxy": "^1.12.1",
    "winston": "^2.1.1"
  },
  "keywords": [
    "react",
    "pubnub",
    "chat"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/rangle/pubnub-react.git"
  },
  "bugs": {
    "url": "https://github.com/rangle/pubnub-react/issues"
  }
}
